<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp12"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp12">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image0"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:src="@drawable/login_account_icon" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp12"
                android:layout_toRightOf="@+id/image0"
                float:fletPaddingBottom="5dp"
                float:fletTextAppearance="@style/floatlabelededittext">

                <EditText
                    android:id="@+id/edt_register_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="姓名"
                    android:inputType="text"
                    android:textColor="@color/C2"
                    android:textColorHint="@color/C3"
                    android:textSize="@dimen/T3"
                    android:theme="@style/MyEditText" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:src="@drawable/login_account_icon" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp12"
                android:layout_toRightOf="@+id/image1"
                float:fletPaddingBottom="5dp"
                float:fletTextAppearance="@style/floatlabelededittext">

                <EditText
                    android:id="@+id/edt_register_pdw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:textColor="@color/C2"
                    android:textColorHint="@color/C3"
                    android:textSize="@dimen/T3"
                    android:theme="@style/MyEditText" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:src="@drawable/login_account_icon" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp12"
                android:layout_toRightOf="@+id/image2"
                float:fletPaddingBottom="5dp"
                float:fletTextAppearance="@style/floatlabelededittext">

                <EditText
                    android:id="@+id/edt_register_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:longClickable="false"
                    android:hint="手机号码"
                    android:inputType="number"
                    android:textColor="@color/C2"
                    android:textColorHint="@color/C3"
                    android:textSize="@dimen/T3"
                    android:theme="@style/MyEditText" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:src="@drawable/login_account_icon" />

            <Spinner
                android:id="@+id/sp_register_dept"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/image3"
                android:entries="@array/departments"
                android:spinnerMode="dropdown"
                 />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:src="@drawable/login_account_icon" />

            <Spinner
                android:id="@+id/sp_register_grade"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/image4"
                android:entries="@array/grade"
                android:spinnerMode="dropdown"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@color/C9"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/C6"
            android:textSize="@dimen/T2" />
    </LinearLayout>

</LinearLayout>