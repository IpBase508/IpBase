<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.ygip.ipbase_android.mvp.projects.view.ProjectDetailActivity">

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_project_detail_headimg"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="fitCenter"
                android:src="@drawable/jidilogo" />

            <me.iwf.photopicker.widget.MultiPickResultView
                android:id="@+id/multiview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"></me.iwf.photopicker.widget.MultiPickResultView>

            <LinearLayout
                android:id="@+id/ll_members_projectdetail"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:text="参与成员"
                    android:gravity="center"
                    android:textSize="@dimen/T2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <Button
                android:background="@drawable/btn_my_bg"
                android:id="@+id/btn_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="更多详情介绍"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
