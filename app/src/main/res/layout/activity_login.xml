<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/C6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_login"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="70dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/login_account_icon"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_toRightOf="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp12"
            float:fletPaddingBottom="5dp"
            float:fletTextAppearance="@style/floatlabelededittext">
            <EditText
                android:id="@+id/edt_account"
                android:theme="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/C3"
                android:textColor="@color/C2"
                android:textSize="@dimen/T3"
                android:hint="账号" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image1"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/login_account_icon"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_toRightOf="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp12"
            float:fletPaddingBottom="5dp"
            float:fletTextAppearance="@style/floatlabelededittext">
            <EditText
                android:id="@+id/edt_password"
                android:theme="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColorHint="@color/C3"
                android:textColor="@color/C2"
                android:textSize="@dimen/T3"
                android:hint="密码" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/C6"
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.dd.CircularProgressButton
        android:id="@+id/circularButton1"
        android:layout_width="196dp"
        android:layout_height="64dp"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        app:cpb_cornerRadius="48dp"
        app:cpb_iconComplete="@drawable/ic_action_accept"
        app:cpb_iconError="@drawable/ic_action_cancel"
        app:cpb_textIdle="@string/Upload" />

    <com.dd.CircularProgressButton
        android:id="@+id/circularButton2"
        android:layout_width="196dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        app:cpb_cornerRadius="48dp"
        app:cpb_iconComplete="@drawable/ic_action_accept"
        app:cpb_iconError="@drawable/ic_action_cancel"
        app:cpb_textIdle="@string/Upload" />


</LinearLayout>