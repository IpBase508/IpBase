<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ebm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/C6">

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/C6">

        <RadioButton
            android:id="@+id/rbtn_member"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/sel_bottom_member"
            android:drawablePadding="6dp"
            android:text="成员"
            android:textColor="@drawable/sel_bottombar_txt"
            android:textSize="@dimen/T5"/>

        <RadioButton
            android:id="@+id/rbtn_dynamic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/sel_bottom_member"
            android:gravity="center"
            android:text="动态"
            android:textColor="@drawable/sel_bottombar_txt"
            android:textSize="@dimen/T5" />

        <!-- 下面这个ImageView用来占位的 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rbtn_projects"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/sel_bottom_member"
            android:drawablePadding="4dp"
            android:text="项目"
            android:textColor="@drawable/sel_bottombar_txt"
            android:textSize="@dimen/T5"/>

        <RadioButton
            android:id="@+id/rbtn_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/sel_bottom_member"
            android:drawablePadding="6dp"
            android:text="我的"
            android:textColor="@drawable/sel_bottombar_txt"
            android:textSize="@dimen/T5"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/rg"
        android:background="@color/C4"/>

    <RelativeLayout
        android:id="@+id/ll_more"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/C6">

        <lt.lemonlabs.android.expandablebuttonmenu.ExpandableMenuOverlay
            android:id="@+id/button_menu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@drawable/ic_more"
            ebm:dimAmount="0.8"
            ebm:mainButtonSize="0.25"
            ebm:otherButtonSize="0.22"
            ebm:distanceY="0.17"
            ebm:distanceX="0.28"
            ebm:bottomPad="0.02"
            ebm:closeButtonSrc="@drawable/ic_more"
            ebm:leftButtonSrc="@drawable/ic_more"
            ebm:midButtonSrc="@drawable/ic_more"
            ebm:rightButtonSrc="@drawable/ic_more"
            ebm:leftButtonText="@string/action_left"
            ebm:midButtonText="@string/action_mid"
            ebm:rightButtonText="@string/action_right"
            />

    </RelativeLayout>

</RelativeLayout>
